# Node environment
NODE_ENV=production

# Server configuration
PORT=3000

# MongoDB connection
MONGODB_URI= your mongodb connection string here

# WhatsApp notification settings
ADMIN_PHONE=91xxxxxxxxxx@c.us
WEBHOOK_URL= your n8n webhook URL here

# Client configuration
CLIENT_LIFETIME=300000  # 5 minutes in milliseconds

# Message Queue configuration
MESSAGE_DELAY=1000      # Delay between messages in milliseconds
MAX_RETRIES=3           # Maximum retry attempts for failed messages
RETRY_DELAY=5000        # Delay between retries in milliseconds
QUEUE_CONCURRENCY=1     # Number of concurrent messages to process